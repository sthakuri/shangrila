<partial name="_IntroPartialView"></partial>

<div id="colorlib-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center animate-box intro-heading">
                <label class="alert alert-info">Today is @areWeOpen</label>
                <h2>Open Hours</h2>
                <p>We are open 6 days a week.</p>
                <ul class="contact-info">
                    @foreach (var item in openHours)
                    {
                        <li>
                            @if(string.Compare(item.Key, "Monday", false)==0)
                            {
                                <div class="alert alert-warning">
                                    <h4>@item.Key</h4>
                                    @foreach (var time in item.Value)
                                    {
                                        <p> @time</p>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <h4>@item.Key</h4>
                                    @foreach (var time in item.Value)
                                    {
                                        <p> @time</p>
                                    }
                                </div>
                            }
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>





