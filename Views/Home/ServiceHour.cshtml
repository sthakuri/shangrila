@model shangrila.Models.HomeViewModel
@{
    ViewBag.Title = "Open Hours";
}
@{

    var areWeOpen = DateTime.Today.DayOfWeek.ToString();

}
<aside id="colorlib-hero">
    <div class="flexslider">
        <ul class="slides">
            <li style="background-image: url(/images/cover_bg_2.jpg);" data-stellar-background-ratio="0.5">
                <div class="overlay"></div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6 col-sm-12 col-xs-12 col-md-offset-3 slider-text">
                            <div class="slider-text-inner text-center">
                                <div class="desc">
                                    <span class="icon"><i class="flaticon-cutlery"></i></span>
                                    <h1>Open Hours</h1>
                                    <p><span><a href="#">Home</a></span> <span>Open Hours</span></p>
                                    <div class="desc2"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</aside>
@await Html.PartialAsync("_IntroPartialView", Model)

<div id="colorlib-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center animate-box intro-heading">
                <label class="alert alert-info">Today is @areWeOpen</label>
                <h2>Open Hours</h2>
                <p>We are open @Model.ServiceHours.Count(x=> x.IsOpen) days a week.</p>
                <ul class="contact-info">
                    @foreach (var item in Model.ServiceHours)
                    {
                        <li>
                            @if(item.IsOpen)
                            {
                                <div class="alert alert-info">
                                    <h4>@item.WeekDay</h4>
                                    <p>@item.ServiceHours</p>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-danger">
                                    <h4>@item.WeekDay</h4>
                                    <p>Closed</p>
                                </div>
                            }
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>





