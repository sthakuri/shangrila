                                    <div class="row">
                                        <div class="col-3">
                                            <lable class="list-group-item-heading h5">Thursday</label>
                                        </div>
                                        <div class="col-9">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" asp-for="Thursday.IsOpen">
                                                <label class="form-check-label" asp-for="Thursday.IsOpen">Open</label>
                                            </div>
                                        </div>
                                    </div>
                                    <input type="text" class="form-control" placeholder="Service Hours. e.g 11:00am-2:30pm, 4:30pm-9:00pm" asp-for="Thursday.ServiceHours">
                                </div>
                                <div href="#" class="list-group-item">
                                    <div class="row">
                                        <div class="col-3">
                                            <lable class="list-group-item-heading h5">Friday</label>
                                        </div>
                                        <div class="col-9">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" asp-for="Friday.IsOpen">
                                                <label class="form-check-label" asp-for="Friday.IsOpen">Open</label>
                                            </div>
                                        </div>
                                    </div>
                                    <input type="text" class="form-control" placeholder="Service Hours. e.g 11:00am-2:30pm, 4:30pm-9:00pm" asp-for="Friday.ServiceHours">
                                </div>
                                <div href="#" class="list-group-item">
                                    <div class="row">
                                        <div class="col-3">
                                            <lable class="list-group-item-heading h5">Saturday</label>
                                        </div>
                                        <div class="col-9">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" asp-for="Saturday.IsOpen">
                                                <label class="form-check-label" asp-for="Saturday.IsOpen">Open</label>
                                            </div>
                                        </div>
                                    </div>
                                    <input type="text" class="form-control" placeholder="Service Hours. e.g 11:00am-2:30pm, 4:30pm-9:00pm" asp-for="Saturday.ServiceHours" autocomplete="off">
                                </div>
                            </ul>
                            <button type="submit" class="btn btn-info btn-outline">Save</button>
                            <a href="/admin" class="btn btn-outline">Go to Admin Page</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

