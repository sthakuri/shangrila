                                <div href="#" class="list-group-item">
                                    <div class="row">
                                        <div class="col-3">
                                            <lable class="list-group-item-heading h5">Tuesday</label>
                                        </div>
                                        <div class="col-9">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" asp-for="Tuesday.IsOpen">
                                                <label class="form-check-label" asp-for="Tuesday.IsOpen">Open</label>
                                            </div>
                                        </div>
                                    </div>
                                    <input type="text" class="form-control" placeholder="Service Hours. e.g 11:00am-2:30pm, 4:30pm-9:00pm" asp-for="Tuesday.ServiceHours">
                                </div>
                                <div href="#" class="list-group-item">
                                    <div class="row">
                                        <div class="col-3">
                                            <lable class="list-group-item-heading h5">Wednesday</label>
                                        </div>
                                        <div class="col-9">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" asp-for="Wednesday.IsOpen">
                                                <label class="form-check-label" asp-for="Wednesday.IsOpen">Open</label>
