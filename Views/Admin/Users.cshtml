@model List<shangrila.Models.User>
@{
    ViewBag.Title = "Add User";
        Layout="_LayoutAdmin";
}
<aside id="colorlib-hero">
    <div class="flexslider">
        <ul class="slides">
            <li style="background-image: url(/images/admin-bg-1.jpg);" data-stellar-background-ratio="0.5">
                <div class="overlay"></div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6 col-sm-12 col-xs-12 col-md-offset-3 slider-text">
                            <div class="slider-text-inner text-center">
                                <div class="desc">
                                    <span class="icon"><i class="flaticon-cutlery"></i></span>
                                    <h1>Users</h1>                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</aside>
<div class="colorlib-about">
    <div class="container">
        <div class="row">
             <form asp-controller="Admin" asp-action="Users">
                <p class="text-danger">@ViewBag.Error</p>
                <div class="form-group">
                    <div class="panel panel-default">
                        <div class="panel-body">                         
                            <label>Display Name:</label>
                            <input class="form-control" name="name">
                             <label>Email:</label>
                            <input class="form-control" name="email">
                            <label>Password:</label>
                            <input type="password" class="form-control" name="password">
                        
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
             </form>
        </div>
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading">Users</div>

            <!-- Table -->
            <table class="table">
                <thead>
                    <tr>
                        <th>SN</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Locked?</th>
                        <th>Last Active</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (User user in Model)
                    {
                        <tr>
                            <td>@(Model.IndexOf(user)+1)</td>
                            <td>@user.DisplayName</td>
                            <td>@user.UserName</td>
                            <td>@user.IsLocked</td>
                            <td>@user.LastLoggedIn.ToString("MM/dd/yyyy hh:mm:ss tt")</td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>

    </div>
</div>