@model shangrila.Models.Restaurant
@{
    ViewBag.Title = "Business Info";
    Layout="_LayoutAdmin";
}

<aside id="colorlib-hero">
    <div class="flexslider">
        <ul class="slides">
            <li style="background-image: url(/images/admin-bg-1.jpg);" data-stellar-background-ratio="0.5">
                <div class="overlay"></div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6 col-sm-12 col-xs-12 col-md-offset-3 slider-text">
                            <div class="slider-text-inner text-center">
                                <div class="desc">
                                    <span class="icon"><i class="icon-user-plus2"></i></span>
                                    <h1>Admin Page</h1>
                                    <p><span><a href="#">Admin</a></span> /<span>Business Info</span></p>
                                    <div class="desc2">You are at business info page.</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</aside>


<div id="colorlib-contact">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12">
                @if(!string.IsNullOrEmpty(ViewBag.Msg)){
                    <div class="alert alert-success" role="alert">@ViewBag.Msg</div>
                }
                <form asp-controller="Admin" asp-action="BusinessInfo" method="post">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            Business Info
                        </div>
                        <div class="form-group panel-body">
                            <div>Business Name:</div>
                            
                            <input type="text" class="form-control" placeholder="Business Name" asp-for="Name">
                            <ul class="list-group">
                                <div href="#" class="list-group-item">
                                    <h5 class="list-group-item-heading">Address</h5>
                                    <input type="text" class="form-control" placeholder="Business Address" asp-for="Address">
                                </div>
                                <div href="#" class="list-group-item">
                                    <h5 class="list-group-item-heading">Phone</h5>
                                    <input type="tel" class="form-control" placeholder="Business Phone" asp-for="Phone" autocomplete="off">
                                </div>
                                <div href="#" class="list-group-item">
                                    <h5 class="list-group-item-heading">Email</h5>
                                    <input type="email" class="form-control" placeholder="Business Email" asp-for="Email" autocomplete="off">
                                </div>
                                <div href="#" class="list-group-item">
                                    <h5 class="list-group-item-heading">Facebook</h5>
                                    <input type="url" class="form-control" placeholder="Facebook Page URL" asp-for="Facebook" autocomplete="off">
                                </div>
                                <div href="#" class="list-group-item">
                                    <h5 class="list-group-item-heading">Instagram</h5>
                                    <input type="url" class="form-control" placeholder="Instagram URL" asp-for="Instagram" autocomplete="off">
                                </div>
                                <div href="#" class="list-group-item">
                                    <h5 class="list-group-item-heading">Yelp</h5>
                                    <input type="url" class="form-control" placeholder="Yelp URL" asp-for="Yelp" autocomplete="off">
                                </div>
                            </ul>
                            <button type="submit" class="btn btn-info btn-outline">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

